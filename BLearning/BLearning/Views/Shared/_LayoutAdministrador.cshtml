@using BLearning.Models.Negocio
@{
    PersonaEntidad objPersona = (PersonaEntidad)Session["personaLogin"];
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BLearning</title>

    <!-- GLOBAL STYLES - Include these on every page. -->
    @Styles.Render("~/Content/plugins/bootstrap/css/bootstrap.min.css")
    @Styles.Render("http://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700,300italic,400italic,500italic,700italic")
    @Styles.Render("http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800")
    @Styles.Render("~/icons/font-awesome/css/font-awesome.min.css")

    <!--ESTILOS DEL TEMA-->
    @Styles.Render("~/Content/style.css")
@Styles.Render("~/Content/plugins.css")
@Styles.Render("~/Content/plugins/messenger/messenger.css")
@Styles.Render("~/Content/plugins/messenger/messenger-theme-flat.css")
    @* Fuentes de Jquery *@
    @Scripts.Render("~/Scripts/jquery.js")
    @Scripts.Render("~/Scripts/jquery-ui.min.js")

</head>
<body>
    <div id="wrapper">
        <!-- begin TOP NAVIGATION -->
        <nav class="navbar-top" role="navigation">

            <!-- begin BRAND HEADING -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle pull-right" data-toggle="collapse" data-target=".sidebar-collapse">
                    <i class="fa fa-bars"></i> Menu
                </button>
                <div class="navbar-brand" style="padding-top:1px">
                    <a href="@Url.Action("Inicio", "Administrador", new { @area=""})">
                        <img class="img-responsive" src="../img/logo-bl.png" alt="">
                    </a>
                </div>
            </div>
            <!-- end BRAND HEADING -->

            <div class="nav-top">

                <!-- begin LEFT SIDE WIDGETS -->
                <ul class="nav navbar-left">
                    <li class="tooltip-sidebar-toggle">
                        <a href="#" id="sidebar-toggle" data-toggle="tooltip" data-placement="right" title="Sidebar Toggle">
                            <i class="fa fa-bars"></i>
                        </a>
                    </li>
                    <!-- You may add more widgets here using <li> -->
                </ul>
                <!-- end LEFT SIDE WIDGETS -->
                <ul class="nav navbar-right">
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user"></i>  <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">
                                    <i class="fa fa-question-circle fa-lg"></i> Help
                                </a>
                            </li>
                            <li>
                                <a class="logout_open" href="../Login/logOut">
                                    <i class="fa fa-sign-out fa-lg"></i> Logout
                                    <strong> @objPersona.nombres </strong>
                                    <input id="idPersonaAdmin" type="hidden" value="@objPersona.idPersona" />
                                </a>
                            </li>
                        </ul>
                        <!-- /.dropdown-menu -->
                    </li>
                </ul>
            </div>
            <!-- /.nav-top -->
        </nav>
        <!-- /.navbar-top -->
        <!-- end TOP NAVIGATION -->
        <!-- begin SIDE NAVIGATION -->
        <nav class="navbar-side" role="navigation">
            <div class="navbar-collapse sidebar-collapse collapse">
                <ul id="side" class="nav navbar-nav side-nav">
                    <!-- begin SIDE NAV USER PANEL -->
                    <li class="side-user hidden-xs">
                        <img class="img-circle" src="../img/admin.jpg" alt="">
                        <p class="welcome">
                            <i class="fa fa-key"></i> Logged in as
                        </p>
                        <p class="name tooltip-sidebar-logout">
                            @objPersona.nombres
                            <span class="last-name">@objPersona.apellidos</span> <a style="color: inherit" class="logout_open" href="@Url.Action("logOut", "Login", new { @area=""})" data-toggle="tooltip" data-placement="top" title="Logout"><i class="fa fa-sign-out"></i></a>
                        </p>
                        <div class="clearfix"></div>
                    </li>
                    
                    <li class="panel">
                        <a href="@Url.Action("Inicio", "Administrador", new { @area=""})" class="accordion-toggle">
                            <i class="fa fa-home fa-lg"></i> Home
                        </a>
                    </li>
                    <li class="panel">
                        <a href="javascript:;" data-parent="#side" data-toggle="collapse" class="accordion-toggle" data-target="#charts">
                            <i class="fa fa-book fa-lg"></i> Activities <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="collapse nav" id="charts">
                            <li>
                                <a href="@Url.Action("crearPreguntasAdmin", "Administrador", new { @area = "" })">
                                    <i class="fa fa-angle-double-right"></i> New activity
                                </a>
                        <a href="@Url.Action("verActividadesAdmin", "Administrador", new { @area = "" })">
                                    <i class="fa fa-angle-double-right"></i> View activities
                        </a>
                    </li>
                        </ul>
                    </li>
                    
                    <li class="panel">
                        <a href="javascript:;" data-parent="#side" data-toggle="collapse" class="accordion-toggle" data-target="#chartsM">
                            <i class="fa fa-bar-chart-o fa-lg"></i> Reports <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="collapse nav" id="chartsM">
                            <li>
                                <a href="@Url.Action("Estadistica", "Administrador", new { @area = "" })">
                                    <i class="fa fa-angle-double-right"></i> Student</a>
                                <a href="@Url.Action("HistorialActividades", "Reportes", new { @area = "" })">
                                    <i class="fa fa-angle-double-right"></i> Teacher
                                </a>
                                <a href="@Url.Action("Historial", "Reportes", new { @area = "" })">
                                    <i class="fa fa-angle-double-right"></i> History Access
                                </a>
                            </li>
                        </ul>
                    </li>
                    
                    <li class="panel">
                        <a href="@Url.Action("Configuraciones", "Administrador", new { @area = "" })">
                            <i class="fa fa-cogs fa-lg"></i> Configurations
                        </a>
                    </li>
                    <li >
                        <a href="@Url.Action("actividadesPerdidas", "Administrador", new { @area = "" })">
                            <i class="fa fa-cogs fa-lg"></i> Lost
                        </a>
                    </li>
                    <li class="panel">
                        <a href="@Url.Action("creditos", "Reportes", new { currentContro = "Administrador" ,@area = ""})">
                            <i class="fa fa-info-circle fa-lg"></i> Credits
                        </a>
                    </li>
                    
                </ul>
                <!-- /.side-nav -->
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <!-- /.navbar-side -->
        <!-- end SIDE NAVIGATION -->
        <!-- begin MAIN PAGE CONTENT -->
        <div id="page-wrapper">
            <div class="page-content">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <!-- /.page-content -->
        </div>
        <!-- /#page-wrapper -->
        <!-- end MAIN PAGE CONTENT -->
    </div>
    <!-- /#wrapper -->
    <div id="footer">
        <p>
            <img style="width:21px; " src="">&nbsp;© 2017 Unidad de Producción de Software - UPS. &nbsp;B-learning
        </p>
    </div>
    <!-- GLOBAL SCRIPTS -->
    @Scripts.Render("~/Scripts/plugins/bootstrap/bootstrap.min.js")
    @Scripts.Render("~/Scripts/plugins/slimscroll/jquery.slimscroll.min.js")
    @Scripts.Render("~/Scripts/plugins/popupoverlay/jquery.popupoverlay.js")
    @Scripts.Render("~/Scripts/plugins/popupoverlay/defaults.js")
    @Scripts.Render("~/Scripts/plugins/messenger/messenger.min.js")
    @Scripts.Render("~/Scripts/plugins/messenger/messenger-theme-flat.js")

    <!-- Logout Notification Box -->
    <div id="logout">
        <div class="logout-message">
            <br />
            <h3>
                <i class="fa fa-sign-out text-yellow"></i> Ready to go?
            </h3>
            <p>Select "Logout" below if you are ready<br> to end your current session.</p>
            <ul class="list-inline">
                <li>
                    <a href="@Url.Action("logOut", "Login",new {@area = ""})" class="btn btn-orange">
                        <strong>Logout</strong>
                    </a>
                </li>
                <li>
                    <button class="logout_close btn btn-orange"><strong>Cancel</strong></button>
                </li>
            </ul>
        </div>
    </div>
    <!-- /#logout -->
    <!-- Logout Notification jQuery -->
    @Scripts.Render("~/Scripts/plugins/popupoverlay/logout.js")

    <!-- HISRC Retina Images -->
    @Scripts.Render("~/Scripts/plugins/hisrc/hisrc.js")

    <!-- PAGE LEVEL PLUGIN SCRIPTS -->
    <!-- THEME SCRIPTS -->
    @Scripts.Render("~/Scripts/flex.js")

<script>
   
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
    function modificarNotificacion(idNotificacion) {
        var params = { idNotificacion: idNotificacion }
        $.ajax(
            {
                url: '@Url.Action("ModificarEstadoNotificacion", "Notificacion")',
                method: "post",
                data: params,
                success: function (response) {
                    if (response == "OK") {
                        window.location.href = '@Url.Action("verActividadesAdmin", "Administrador")';
                    }
                    else {
                        window.location.href = '@Url.Action("verActividadesAdmin", "Administrador")';
                    }
                },
                error: function (response) {
                    window.location.href = '@Url.Action("verActividadesAdmin", "Administrador")';
                }
            });
    }

</script>
</body>


</html>
